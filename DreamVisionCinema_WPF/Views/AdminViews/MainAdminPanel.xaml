<Window x:Class="DreamVisionCinema_WPF.Views.AdminViews.MainAdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DreamVisionCinema_WPF.Views.AdminViews"
        mc:Ignorable="d"
        Title="Panel administratora"
        Height="853" Width="1519"
        Background="#22214a"
        Icon="../../Assets/app_icon1.ico"
        >
    <DockPanel>
        <Grid DockPanel.Dock="Left" Background="#1f1e44">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Image Source="pack://application:,,,/Assets/logo.png" Width="250" Height="140" />
                <Button Background="Transparent" HorizontalContentAlignment="Left" Padding="10,10,20,10">
                    <StackPanel Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_Film" Foreground="White" Width="35" Height="35"/>
                        <Label Margin="10,0,0,0" Foreground="White" FontSize="25">Pokaż listę filmów</Label>
                    </StackPanel>
                </Button>
                <Button Background="Transparent" HorizontalContentAlignment="Left" Padding="10,10,20,10">
                    <StackPanel Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Solid_BookOpen" Foreground="White" Width="35" Height="35"/>
                        <Label Margin="10,0,0,0" Foreground="White" FontSize="25">Pokaż listę rezerwacji</Label>
                    </StackPanel>
                </Button>
                <Button Background="Transparent" HorizontalContentAlignment="Left" Padding="10,10,20,10">
                    <StackPanel Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Regular_ChartBar" Foreground="White" Width="35" Height="35"/>
                        <Label Margin="10,0,0,0" Foreground="White" FontSize="25">Pokaż statystyki</Label>
                    </StackPanel>
                </Button>
                <Button Background="Transparent" HorizontalContentAlignment="Left" Padding="10,10,20,10">
                    <StackPanel Orientation="Horizontal">
                        <fa5:ImageAwesome Icon="Regular_ArrowAltCircleLeft" Foreground="White" Width="35" Height="35"/>
                        <Label Margin="10,0,0,0" Foreground="White" FontSize="25">Wróć</Label>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Label Foreground="White" HorizontalAlignment="Center" FontSize="15" Padding="0,0,0,0">v 1.0.0</Label>
                <Label Foreground="White" HorizontalAlignment="Center" FontSize="15" Padding="0,0,0,8">DreamVision Cinema©</Label>
            </StackPanel>
        </Grid>
        <StackPanel  DockPanel.Dock="Top" Background="#1f1e44">
            <StackPanel Orientation="Horizontal">
                <fa5:ImageAwesome Icon="Regular_ArrowAltCircleLeft" Foreground="White" Width="35" Height="35"/>
                <Label Margin="10,0,0,0" Foreground="White" FontSize="25">Wróć</Label>
            </StackPanel>
        <StackPanel>
            <!--Tutaj zagnieżdzone okna-->
        </StackPanel>
    </DockPanel>
</Window>
